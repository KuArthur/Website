include /../../blocks/counter/counter.pug
include /../../blocks/simple-button/simple-button.pug

mixin dropdown({items=[],text, vis, mix, expanded})
    div.dropdown(class=mix)
        input.dropdown__default.js-dropdown__default(value='' readonly placeholder=text)
        .dropdown__icon.js-dropdown__icon keyboard_arrow_down
        if expanded
            .dropdown__expanded.js-dropdown__expanded.dropdown__expanded_status_enabled
                each item in items
                    +counter(item)
                if vis
                    .dropdown__buttons.js-dropdown__buttons
                        .dropdown__buttons_clear.js-dropdown__buttons_clear
                            +simple-button('очистить')
                        .js-dropdown__buttons_apply.dropdown__buttons_apply
                            +simple-button('применить')
        else
            .dropdown__expanded.js-dropdown__expanded
                each item in items
                    +counter(item)
                if vis
                    .dropdown__buttons.js-dropdown__buttons
                        .dropdown__buttons_clear.js-dropdown__buttons_clear
                            +simple-button('очистить')
                        .js-dropdown__buttons_apply.dropdown__buttons_apply
                            +simple-button('применить')
    