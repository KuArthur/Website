link(rel="stylesheet", href="index.scss")
mixin radio(text,id,name)
    .typo_montserrat.typo_size_m.typo_theme_light.typo_height_m
        label(for=id).radio-buttons__wrap
            input.radio-buttons__input(type="radio" id=id name=name)
            span.radio-buttons__circle
            span.radio-buttons__addon=text