include /../dropdown/dropdown.pug
include /../dropdowns-calendar/dropdowns-calendar.pug
include /../button-arrow/button-arrow.pug

mixin card-search()
    .card-search
        .card-search__head.typo_opensans.typo_bold.typo_size_xl.typo_height_l Найдём номера под ваши пожелания
        
        .card-search__calendar
            +dropdowns-calendar('прибытие','выезд')

        .card-search__dropdown
            .card-search__inscription.typo_montserrat.typo_bold.typo_size_s.typo_height_s.typo_theme_dark ГОСТИ
            +dropdown({items:['ВЗРОСЛЫЕ','ДЕТИ','МЛАДЕНЦЫ'],text:'Сколько гостей',vis:'видно', mix:'dropdown-guest'})
       
        .card-search__button
            +button-arrow('подобрать номер')
