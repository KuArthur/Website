link(href='/node_modules/air-datepicker/dist/css/datepicker.min.css' rel='stylesheet' type='text/css')

mixin dropdown-calendar(vis)
    .dropdown-calendar.js-dropdown-calendar
        input.dropdown-calendar__field.js-dropdown-calendar__field.typo_montserrat.typo_normal.typo_size_m.typo_height_m.typo_theme_default(type="text" placeholder='ДД.ММ.ГГГГ' readonly)
        .dropdown-calendar__icon keyboard_arrow_down
        .dropdown-calendar__calendar.js-dropdown-calendar__calendar(type="text" class="datepicker-here")